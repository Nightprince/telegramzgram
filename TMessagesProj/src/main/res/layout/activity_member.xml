<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d1cfcf"
    tools:context="org.zgram.messenger.MainActivity">
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:id="@+id/member_cn"
        android:text="خرید ممبر واقعی کانال [شروع از 29 هزار تومان ]"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:id="@+id/member_offline"
        android:text="خرید ممبر آفلاین کانال [ شروع از 2 هزار تومان ]"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:id="@+id/member_group"
        android:text="خرید ممبر واقعی گروه [ شروع از 6 هزار تومان ]"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:id="@+id/tabligh_not"
        android:text="تبلیغات نوتیفیکیشن [ شروع از 40 هزار تومان ]"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:id="@+id/fallower_insta"
        android:text="خرید فالوور اینستاگرام [ شروع از 3 هزار تومان ]"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:id="@+id/etemad"
        android:text="چگونه به یک فروشگاه اینترنتی اعتماد کنیم ؟"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape"
        android:id="@+id/support"
        android:text="پشتیبانی آنلاین تلگرام"
        android:textColor="#000"
        android:textSize="18sp"
        android:typeface="sans"
        android:textStyle="bold"
        />


    
    
    
    
    
    
    
    
    
    
</LinearLayout>












</ScrollView>
